<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="5px" android:orientation="vertical">

	<LinearLayout android:id="@+id/LinearLayout1"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginTop="5px" android:layout_marginBottom="5px"
		android:orientation="vertical" android:background="#aaaaaa"
		android:padding="5px">

		<TextView android:id="@+id/tvNamespace"
			android:layout_height="wrap_content" android:text="Namespace"
			android:textSize="6pt" android:textColor="#000000"
			android:layout_width="fill_parent" android:inputType="textUri" />
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/etNamespace"
			android:textSize="6pt" android:text="/ccnchat" />

		<TextView android:id="@+id/tvRemoteHost"
			android:layout_height="wrap_content" android:text="Remote host (IP only)"
			android:textSize="6pt" android:textColor="#000000"
			android:layout_width="fill_parent" />
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/etRemoteHost"
			android:textSize="6pt" android:text="" android:inputType="text" />

		<TextView android:id="@+id/tvRemotePort"
			android:layout_height="wrap_content" android:text="Remote port"
			android:textSize="6pt" android:textColor="#000000"
			android:layout_width="fill_parent" />
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/etRemotePort"
			android:textSize="6pt" android:text="9695" android:inputType="number" />

		<Button android:layout_height="wrap_content" android:id="@+id/btnStartCCNx"
			android:layout_width="fill_parent" android:text="Start CCNx" />
	</LinearLayout>

	<TextView android:id="@+id/tvRecURL" android:layout_height="wrap_content"
		android:text="Receiver URI" android:padding="2px" android:textSize="6pt"
		android:layout_width="fill_parent" android:inputType="textUri" />
	<EditText android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/etRecURL"
		android:textSize="6pt" android:text="Android" android:inputType="textUri" />


	<TextView android:id="@+id/tvAuth" android:layout_height="wrap_content"
		android:text="Authenticator" android:padding="2px" android:textSize="6pt"
		android:layout_width="fill_parent" />
	<EditText android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/etAuth"
		android:textSize="6pt" android:text="Android" />

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button android:text="Listen" android:layout_height="wrap_content"
			android:id="@+id/btnListen" android:layout_width="wrap_content"
			android:layout_weight="1" />
		<Button android:text="Connect" android:layout_height="45dip"
			android:id="@+id/btnConnect" android:layout_width="wrap_content"
			android:layout_weight="1" />
		<Button android:text="Setup" android:layout_height="45dip"
			android:id="@+id/btnSetup" android:layout_width="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
	<TextView android:layout_height="wrap_content" android:text=""
		android:id="@+id/tvStatus" android:layout_width="fill_parent" />
</LinearLayout>
